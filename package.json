{
  "name": "@lu-jiejie/markdown-it-magic-link",
  "type": "module",
  "version": "0.2.3",
  "packageManager": "pnpm@10.17.1",
  "description": "Makes links and `@mentions` in markdown beautiful and interactive.",
  "author": "Lu Jiejie",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/markdown-it-magic-link#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/markdown-it-magic-link.git"
  },
  "bugs": "https://github.com/antfu/markdown-it-magic-link/issues",
  "keywords": [
    "markdown-it"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint .",
    "release": "bumpp && npm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@antfu/ni": "^26.0.1",
    "@antfu/utils": "^9.2.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.19.17",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "lint-staged": "^16.2.0",
    "pnpm": "^10.17.1",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
